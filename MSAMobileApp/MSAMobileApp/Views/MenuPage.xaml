<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MSAMobileApp.Views.MenuPage" xmlns:pages="clr-namespace:MSAMobileApp.Views;assembly=MSAMobileApp">
  <MasterDetailPage.Master>
    <ContentPage Title="Menu">
      <ContentPage.Content>
        <StackLayout x:Name="Layout" Orientation="Vertical" BackgroundColor="White" Padding="20, 50">
          <Label Text="Menu" XAlign="Center" TextColor="Black" FontSize="25"/>
          
          <Button Text="Home" x:Name="HomeBtn" TextColor="White" BackgroundColor="Red"/>
          <Button Text="Food Menu | Hot Deals" x:Name="FoodBtn" TextColor="White" BackgroundColor="Red"/>
          <Button Text="Book a Reservation" x:Name="BookBtn" TextColor="White" BackgroundColor="Red"/>
          <Button Text="Login | Register" x:Name="AuthBtn" TextColor="White" BackgroundColor="Red"/>
          <Button Text="Contact Us" x:Name="ContactBtn" TextColor="White" BackgroundColor="Red"/>
          <Button Text="Settings" x:Name="SettingsBtn" TextColor="White" BackgroundColor="Red"/>

          <Label Text="Welcome Guest" x:Name="currentLbl" XAlign="Center" TextColor="Red" FontSize="15"/>
        </StackLayout>
      </ContentPage.Content>
    </ContentPage>
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
    <pages:HomePage/>
  </MasterDetailPage.Detail>
</MasterDetailPage>