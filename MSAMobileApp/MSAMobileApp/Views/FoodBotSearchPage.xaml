<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSAMobileApp.Views.FoodBotSearchPage"
             Title="Custom search">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="0,20,0,0" Spacing="10">
        <Label Text="Search for an item through our Fabrikam food bot" VerticalOptions="Center" HorizontalOptions="Center" />
        <ActivityIndicator Color="Red" IsRunning="False" x:Name ="LoadIndicator"/>
        <Button Text="Bot Search" TextColor="Black" BackgroundColor="Yellow" Clicked="InitiateBot"/>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>