<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSAMobileApp.Views.FacebookLoginPage"
             Title="Facebook Login">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="0,20,0,0" Spacing="10">
        <Label Text="Login via Facebook" XAlign="Center" FontSize="20"/>
        <ActivityIndicator Color="Red" IsRunning="False" x:Name ="LoadIndicator"/>
        <Button x:Name="loginButton" Text="Sign-in" TextColor="White" BackgroundColor="#3b5998" MinimumHeightRequest="30" Clicked="loginButton_Clicked"/>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>