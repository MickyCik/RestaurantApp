<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSAMobileApp.Views.ReccomendedPage"
             Title="Reccomended">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="0,20,0,0" Spacing="10">
        <Label Text="Reccomended for you" XAlign="Center" FontSize="16"/>
        <ActivityIndicator Color="Red" IsRunning="False" x:Name ="LoadIndicator"/>
        <Button Text="Get Reccomendations" x:Name="reccomendButton" TextColor="Black" BackgroundColor="Yellow" Clicked="GetLocationData"/>
        <Label Text="Location Data: " x:Name="data" FontSize="15"/>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>