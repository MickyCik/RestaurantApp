<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSAMobileApp.Views.OrderPage"
             Title="Order">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout VerticalOptions="Center" Padding="30">
        <Label Text="Visit the shop to add items to cart" x:Name="cartInfo" HorizontalOptions="Center"/>
        <Button Text="Food Menu's" x:Name="ToMenuBtn" TextColor="Black" BackgroundColor="Yellow" Clicked="ToMenu"/>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>